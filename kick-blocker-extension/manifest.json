{
  "manifest_version": 3,
  "name": "Kick Streamer Blocker",
  "version": "1.2",
  "description": "Hide unwanted streamers from Kickâ€™s Home and Browse pages.",
  "permissions": ["storage"],
  "host_permissions": ["https://kick.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://kick.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
